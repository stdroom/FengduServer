<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>  
    <class name="com.demo.model.models.Organization" table="organization" lazy="false">  
	    
	   	<id name="id" column="id" type="integer" >
			<generator class="native" />
		</id>
		
		<version name="version" column="version" type="integer"/>
	    <property name="enable" column="enable" type="boolean" not-null="true"/>
	    <property name="name" column="name" type="string" not-null="true"/>  
	    <property name="levelCode" column="levelCode" type="string" not-null="true"/>
	    <property name="position" column="position" type="integer" not-null="true"/>
	    <property name="theValue" column="theValue" type="string"/>	    
	    
	    <many-to-one name ="parent" class="com.demo.model.models.Organization" foreign-key="FK_organization_parentId_organization">
		  <column name="parentId"/>
		</many-to-one>
		
		<bag name="children" table="organization" inverse="true" lazy="false">
	      <key column="parentId"/>
	      <one-to-many class="com.demo.model.models.Organization"/>
	    </bag>

    </class>  
</hibernate-mapping> 